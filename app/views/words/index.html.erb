    <h1>Mots enregistrés sur Universaly</h1>
    <p><%= @words.count %> mots</p>
    <hr>

      <%= simple_form_for :search, url: words_path, method: :get, class: "form-inline" do |f| %>
          <%= f.input :word, placeholder: "Rechercher un mot..."%>
          <%= f.input :category_id, collection:Category.all, include_hidden: false, label: "Choisir une catégorie", as: :radio_buttons, input_html: { class: "tag-selector-small" }, item_wrapper_class: 'tag-item' %>
          <%= f.input :progress,  collection: Word::PROGRESS, include_hidden: false, label: "Choisir le niveau d'apprentissage", as: :radio_buttons, input_html: { class: "tag-selector" }, item_wrapper_class: 'tag-item' %>
          <%= f.input :favorite, as: :radio_buttons %>
        <%= f.submit "Search", class: "btnpractice" %>
      <% end %>

      <table>
        <tr>
          <td>Mots en anglais</td>
          <td>Mots traduits en français</td>
          <td>Catégorie</td>
          <td>Progrès</td>
          <td>Favoris</td>
        </tr>

        <% @words.each do |word| %>
        <tr>
          <td><i class="fas fa-external-link-alt"></i><%= link_to word["word_requested"], word_path(word)%></td>
          <td><%= word.word_translated %></td>
          <td><%= word.category.name %></td>
          <td><%= word.progress %></td>
          <td><%= word.favorite %></td>
          <td><%#= link_to  "Supprimer", word_path(word), method: :delete, data: {confirm: "Are you sure"}  %></td>
        </tr>
        <% end %>
      </table>
