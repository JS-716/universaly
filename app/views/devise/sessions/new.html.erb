<div class="container d-flex justify-content-center align-items-center">
  <div class="row mt-5 mb-5">
    <div class="col">

      <div class="form-signup-login">
        <h2>Me connecter</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, label: "E-mail",
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password, label: "Mot de passe",
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions mt-4 mb-2">
            <%= f.button :submit, "Me connecter", class: "btn-exercise" %>
          </div>
        <% end %>

        <div class="links-signin d-flex flex-column">
          <%#= render "devise/shared/links" %>
          <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %>
          <%= link_to "Créer un compte", new_registration_path(resource_name) %>
        </div>
        
      </div>

    </div>
  </div>
</div>